{
  "name": "cs-tracker-tests",
  "version": "1.0.0",
  "description": "CS Tracker End-to-End Tests",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:report": "playwright show-report tests/e2e/reports",
    "test:backend": "cd backend && python -m pytest ../tests/backend -v",
    "test:backend:cov": "cd backend && python -m pytest ../tests/backend -v --cov=app --cov-report=html",
    "test:all": "npm run test:backend && npm run test:e2e",
    "install:playwright": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
